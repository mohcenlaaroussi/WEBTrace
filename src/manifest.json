{
  "manifest_version": 2,
  "name": "Lighthouse",
  "version": "0.0.1",

  "description": "Cross browser (PETs) extension for private information tracing across websites",
	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["js/content.js"]
		}
	],
	"permissions": [
		"<all_urls>",
		"tabs",
		"cookies",
    	"storage",
    	"downloads",
    	"privacy",
    	"webRequest",
    	"webRequestBlocking"
	],

	"browser_action": {},


	/*"background": {
		"scripts": [
			"js/store.js",
			"js/capture.js",
			"js/background.js"
		]
	}*/
	"background": {
    	"page": "background.html"
  	},
  	"content_security_policy": "script-src 'self' https://unpkg.com/dexie@latest/dist/dexie.js; object-src 'self'"

}